<Window x:Class="Gomoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Window.Resources>
        <Style x:Key="TileButtonStyle"
               TargetType="Button">
            <Setter Property="Foreground"
                    Value="{Binding Piece.Brush}" />
            <Setter Property="Content"
                    Value="{Binding Piece.Symbol}" />
            <Setter Property="Width"
                    Value="25" />
            <Setter Property="Height"
                    Value="25" />
            <EventSetter Event="Click"
                         Handler="TileButton_Click" />
        </Style>
        <Style x:Key="WidthStackPanelStyle"
               TargetType="StackPanel">
            <Setter Property="Orientation"
                    Value="Horizontal" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300px" />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel x:Name="HeightStackPanel"
                        Orientation="Vertical" />
        </ScrollViewer>
        <ScrollViewer Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="UseAI" Content="UseAI" Checked="CheckBox_Checked" />
                <Button Content="Analyze" Click="Button_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
